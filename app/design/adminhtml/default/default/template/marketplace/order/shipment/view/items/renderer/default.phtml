<?php $_item = $this->getItem() ?>
<?php

$sellerid = Mage::helper('marketplace')->getSellerIdfromLoginUser(); 
$productid=$_item->getData("product_id");
$sellerId= Mage::helper('marketplace')->sellerIdFromProductId($productid);
$sellerid_storename = '';
if($sellerId){
    $sellerid_storename = Mage::helper("marketplace")->sellerstorenameFromSellerId($sellerId);
}
?>
<tr class="border">
    <td><?php echo $this->getColumnHtml($_item, 'name') ?></td>
    <?php if(!$sellerid):?>
    <?php if($sellerId ):?>
    <td><?php echo $sellerid_storename; ?></td>
    <?php else:?>
    <td></td>
    <?php endif;?>
    <?php endif;?>
    <td class="a-center last" width="10%"><?php echo $_item->getQty()*1 ?></td>
</tr>
