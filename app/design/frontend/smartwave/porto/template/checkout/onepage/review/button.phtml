<button type="submit" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Place Order')) ?>" class="button btn-checkout" id="otpModalBtn"><span><span><?php echo $this->__('Place Order') ?></span></span></button>
<div class="otpOverlay"></div>
<div class="otpModal">
    <h4><?php echo $this->__('Order Confirmation'); ?><span class="otpCloseBtn"><i class="fa fa-times"></i></span></h4>
    <hr>
	<div id="ajax-mobile">
		<div class="input-group">
			<div id="noteOC">Note: </div> <p><?php echo $this->__('Hitting back button will get your cart empty!')?></p>
			<div id="place-order-ajax-img" style="display: none"><img src="<?php echo $this->getSkinUrl('sociallogin/images/ajax-loader.gif'); ?>" alt="loading please wait" /></div>
			<button type="submit" onclick="review.save();" class="btn btn-primary otpBtn place-order-ajax-btn"><?php echo $this->__('Place Order') ?></button>
		</div>
	</div>
</div>
<script type="text/javascript">
jQuery(document).ready(function(){
   jQuery("#otpModalBtn").click(function(){
	   jQuery(".otpModal").css("display","block");
	   jQuery(".otpOverlay").css("display","block");
   }); 
   jQuery(".otpCloseBtn, .otpOverlay").click(function(){
	   jQuery(".otpModal").css("display","none");
	   jQuery(".otpOverlay").css("display","none");
   }); 
   jQuery('.place-order-ajax-btn').click(function(){
		if(jQuery('#agreement-1').prop('checked')){
			jQuery('#place-order-ajax-img').show();
			jQuery('.place-order-ajax-btn').attr('disabled', true);
		} else {
			jQuery('#place-order-ajax-img').hide();
			jQuery('.place-order-ajax-btn').attr('disabled', false);
		}
   });
});
</script>