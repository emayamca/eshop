$_categories = $this->getCategoryCollection();
?>
<?php if ($_categories->count()): ?>
    <div class="block block-list block-viewed">
        <div class="block-title">
            <strong><span><?php echo $this->__('Category Results') ?>
                    <small><?php echo $this->__('(%d)', $_categories->count()) ?></small></span></strong>
        </div>
        <div class="block-content">
            <ol>
                <?php foreach ($_categories as $_category): /** @var Mage_Catalog_Model_Category $_category */ ?>
                    <li>
                        <a href="<?php echo $this->escapeUrl($_category->getUrl()) ?>"
                           title="<?php echo $this->escapeHtml($_category->getName()) ?>">
                            <?php echo $this->escapeHtml($this->getCategoryPathName($_category)) ?>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ol>
        </div>
    </div>
<?php endif;
