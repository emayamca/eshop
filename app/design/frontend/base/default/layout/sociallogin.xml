<?xml version="1.0"?><!-- Business Fuel Login --><layout version="0.1.0">    <default>        <reference name="head">                    <action method="addCss">                <stylesheet>sociallogin/sociallogin.css</stylesheet>            </action>                               </reference>        <reference name="before_body_end">             <block type="sociallogin/sociallogin" before="-" name="sociallogin" as="sociallogin"  template="sociallogin/sociallogin.phtml" >                           <block type="captcha/captcha" name="captcha">                    <reference name="head">                        <action method="addJs">                            <file>mage/captcha.js</file>                        </action>                    </reference>                    <action method="setFormId">                        <formId>user_create</formId>                    </action>                    <action method="setImgWidth">                        <width>230</width>                    </action>                    <action method="setImgHeight">                        <width>50</width>                    </action>                </block>            </block>        </reference>    </default>    <sociallogin_index_deals>        <reference name="head">                    <action method="addCss">                <stylesheet>sociallogin/deals.css</stylesheet>            </action>                               </reference>        <reference name="root">            <action method="setTemplate">                <template>page/1column.phtml</template>            </action>        </reference>        <reference name="content">            <block type="sociallogin/deals" name="sociallogin_deals"                               template="sociallogin/index.phtml">                <block type="catalog/product_list_toolbar" name="product_list_toolbar"                                       template="catalog/product/list/toolbar.phtml">                    <block type="page/html_pager" name="product_list_toolbar_pager" />                </block>                <action method="setToolbarBlockName">                    <name>product_list_toolbar</name>                </action>                <action method="setListOrders" />                <action method="setListModes" />                <action method="setListCollection" />            </block>        </reference>    </sociallogin_index_deals>    <sociallogin_index_brands>        <reference name="head">                    <action method="addCss">                <stylesheet>sociallogin/deals.css</stylesheet>            </action>                               </reference>        <reference name="root">            <action method="setTemplate">                <template>page/1column.phtml</template>            </action>        </reference>        <reference name="content">            <block type="sociallogin/brands" name="sociallogin_brands"                               template="sociallogin/brands.phtml">                <block type="catalog/product_list_toolbar" name="product_list_toolbar"                                       template="catalog/product/list/toolbar.phtml">                    <block type="page/html_pager" name="product_list_toolbar_pager" />                </block>                <action method="setToolbarBlockName">                    <name>product_list_toolbar</name>                </action>                <action method="setListOrders" />                <action method="setListModes" />                <action method="setListCollection" />            </block>        </reference>    </sociallogin_index_brands></layout> 