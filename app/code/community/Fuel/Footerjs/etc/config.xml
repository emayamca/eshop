<?xml version="1.0"?>
<config>
    <modules>
        <Fuel_Footerjs>
            <version>0.0.4</version>
        </Fuel_Footerjs>
    </modules>
    <global>
        <helpers>
            <fuel_footerjs>
                <class>Fuel_Footerjs_Helper</class>
            </fuel_footerjs>
        </helpers>
        <models>
            <fuel_footerjs>
                <class>Fuel_Footerjs_Model</class>
            </fuel_footerjs>
            <enterprise_pagecache>
                <rewrite>
                    <observer>Fuel_Footerjs_Model_PageCache_Observer</observer>
                </rewrite>
            </enterprise_pagecache>
        </models>
    </global>
    <frontend>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <fuel_footerjs_block>
                        <type>singleton</type>
                        <class>fuel_footerjs/observer</class>
                        <method>handleBlockInlineJs</method>
                    </fuel_footerjs_block>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
</config>
